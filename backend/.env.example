# ERA5 Visualizer Backend - Environment Variables
# Copy this file to .env and fill in your values

# Flask Secret Key (generate a secure random string for production)
SECRET_KEY=your-super-secret-key-change-this

# Database URL (optional - defaults to SQLite)
# For PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=

# CDS API Credentials (optional - for fetching ERA5 data)
CDS_API_KEY=
CDS_API_URL=https://cds.climate.copernicus.eu/api/v2

# Frontend URL for CORS (comma-separated for multiple)
FRONTEND_URL=http://localhost:5173

# Flask Environment
FLASK_ENV=production
