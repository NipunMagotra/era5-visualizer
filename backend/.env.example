# Database Configuration
# Railway provides this automatically when you add PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/era5_db

# CDS API Configuration (Get from https://cds.climate.copernicus.eu/)
CDS_API_KEY=your_cds_api_key_here
CDS_API_URL=https://cds.climate.copernicus.eu/api/v2

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# CORS - Comma-separated list of allowed origins
# Use * for all origins (not recommended for production) 
# Example: https://your-frontend.vercel.app,https://your-frontend.netlify.app
ALLOWED_ORIGINS=*

# Port - Railway provides this automatically
PORT=5000
